#editIndicatorModal.modal.fade(role='dialog')
    .modal-dialog
        form.modal-content.card(ng-submit='update()')
            .modal-header.card-header(data-background-color='blue')
                button.close(type='button', data-dismiss='modal') ×
                h4.modal-title.title Editar el Tag
                    p.category Ingresa los datos solicitados
            .modal-body.card-content
                .row
                    .col-md-6
                        .form-group
                            label.control-label Tag
                            input(type='text',name='id',ng-model='editedIndicator._id',hidden='true')
                            input.form-control(type='text',name='tag',ng-model='editedIndicator.tag', required='')
                    .col-md-6
                        .form-group
                            label.control-label Unidades
                            input.form-control(type='text',name='units',ng-model='editedIndicator.units',required='')
                .row
                    .col-md-12
                        .form-group
                            label Descripción
                            .form-group
                                label.control-label  Ingrese el texto
                                textarea.form-control(rows='5',name='description',ng-model='editedIndicator.description',required='')

            .modal-footer
                button.btn.btn-primary.pull-right(type='submit') Registrar
                    .clearfix
                //button.btn.btn-default(type='button', data-dismiss='modal') Close