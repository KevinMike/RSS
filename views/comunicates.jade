extends layout
block content
    .row(ng-app='comunicatesModule')
        .card(ng-controller='comunicatesController')
            include createComunicateModal
            include editComunicateModal
            .card-header(data-background-color='purple')
                h4.title COMUNICADOS
                p.category Listado
                button.btn.btn-info.btn-lg.float-right(type='button', data-toggle='modal', data-target='#createComunicateModal') NUEVO
            .card-content.table-responsive
                table.table
                    thead.text-primary
                        th Descripci√≥n
                        th Opciones
                    tbody
                        each value in comunicates
                            tr
                                td #{value.comunicate}
                                td.td-actions.text-right
                                    button.btn.btn-primary.btn-simple.btn-xs(type='button', rel='tooltip', title='Editar',ng-click="setId('#{JSON.stringify(value)}')",data-toggle='modal', data-target='#editComunicateModal')
                                        i.material-icons edit
                                    button.btn.btn-danger.btn-simple.btn-xs(type='button', rel='tooltip', title='Eliminar',ng-click="delete('#{value._id}')")
                                        i.material-icons close

block Javascript
    script(type='text/javascript',src='/js/modules/comunicatesModule.js')
    script(type='text/javascript').
        $(document).ready(function () {
            document.getElementById('comunicates').className = 'active';
        });